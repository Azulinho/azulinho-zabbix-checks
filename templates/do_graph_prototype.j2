{% from 'do_graph_item.j2' import do_graph_item  with context %}
{% macro do_graph_prototype(g) %}
                        <graph_prototype>
                            <name>{{ g.name }}</name>
                            <width>{{ g.width |default(600)}}</width>
                            <height>{{ g.height|default(340)}}</height>
                            <yaxismin>{{ g.yaxmismin | default(0.0000) }}</yaxismin>
                            <yaxismax>{{ g.yaxismax | default(100.0000)}}</yaxismax>
                            <show_work_period>{{ g.show_work_period |default(0)}}</show_work_period>
                            <show_triggers>{{g.show_triggers|default(0)}}</show_triggers>
                            <type>{{g.type|default(2)}}</type>
                            <show_legend>{{g.show_legend|default(1)}}</show_legend>
                            <show_3d>{{g.show_3d|default(1)}}</show_3d>
                            <percent_left>{{g.percent_left|default(0.0000)}}</percent_left>
                            <percent_right>{{g.percent_right|default(0.0000)}}</percent_right>
                            <ymin_type_1>{{g.ymin_type_1|default(0)}}</ymin_type_1>
                            <ymax_type_1>{{g.ymax_type_1|default(0)}}</ymax_type_1>
                            <ymin_item_1>{{g.ymin_item_1|default(0)}}</ymin_item_1>
                            <ymax_item_1>{{g.ymax_item_1|default(0)}}</ymax_item_1>
                            <graph_items>
{%    for _graph in g.graph_items                                              %}
{{      do_graph_item(_graph)  }}
{%    endfor %}
                            </graph_items>
                        </graph_prototype>

{% endmacro %}

